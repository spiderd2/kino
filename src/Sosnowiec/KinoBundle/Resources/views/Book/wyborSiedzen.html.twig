{% block pageContent %}
    <div class="container">   
        <table class="table table-hover" >
                <thead>
                    <tr>
                        <th>Siedzenie</th>
                        <th>Dostepne</th>
                    </tr>
                </thead>
                {% for entry in miejsca %}
                    <tr>
                        <td>{{ entry.miejsce}}, {{ entry.rzad}}</td>
                        <td>{{ entry.zajete }}</td>
                    </tr>
                {% endfor %}
            </table>
    </div>

{%endblock%}

