{% extends "SosnowiecKinoBundle::base.html.twig"%}

{% block pageTitle %}
    Strona główna | {{parent()}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="{{asset('bundles/sosnowieckino/js/parsley/parsley.css')}}" rel="stylesheet">

{%endblock%}    


{% block pageContent %}
    <div class="row" style="padding-top:80px;">

        <form id="form" class="" method="POST" action="{{path('sosnowiec_kino_register')}}" data-validate="parsley">
            <h2>Rejestracja</h2>
            <label>Nazwa uzytkownika</label>
            <input type="text" name="login" class="input-lg" data-trigger="change" data-reguired="true"/>
            <br/>
            <label>Imię</label>
            <input type="text" name="imie" class="input-lg"/>
            <br/>
            <label>Nazwisko</label>
            <input type="text" name="nazwisko" class="input-lg"/>
            <br/>
            <label>Email</label>
            <input type="text" name="email" class="input-lg"/>
            <br/>
            <label>Hasło</label>
            <input id="pass" type="text"  name="haslo" class="input-lg"data-trigger="change" data-reguired="true"/>
            <br/>
            <label>Powtórz Hasło</label>
            <input id="passRe" type="text" name="haslo" class="input-lg" data-trigger="change" data-reguired="true" data-equalto="#pass"/>
            <br/>
            <label>Telefon</label>
            <input type="text" name="telefon" class="input-lg"/>
            <div>
                <button class="btn btn-primary" type="submit"> Stwórz konto</button>
            </div>
        </form>

    </div>
{%endblock%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley.min.js')}}"></script>
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley-standalone.min.js')}}"></script>
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley.extend.min.js')}}"></script>

{%endblock%} 