{% extends "SosnowiecKinoBundle::base.html.twig"%}

{% block pageTitle %}
    Strona główna | {{parent()}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="{{asset('bundles/sosnowieckino/js/parsley/parsley.css')}}" rel="stylesheet">
<style>
        body {           
            padding-bottom: 40px;
            background-color: #eee;
        }

        form {
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
            background-color: white;
            border-radius: 25px;
            
        }
        .container {
        width: 500px;
        clear: both;
    }
    .container input {
        width: 100%;
        clear: both;
    }
        
    </style>
    
{%endblock%}    


{% block pageContent %}
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="container">

        <form id="form" class="" method="POST" action="{{path('sosnowiec_kino_register')}}" data-validate="parsley">
            <h2>Rejestracja</h2>
            <!--<label>Nazwa uzytkownika</label>-->
            <input type="text" name="login" class="input-lg"  placeholder="Nazwa użytkownika" data-parsley-required="true" data-parsley-type="text"/>
            <br/>
            {#<label>Imię</label>#}
            <input type="text" name="imie" class="input-lg" placeholder="Imię"  data-parsley-trigger="change" data-parsley-required="true" data-parsley-type="text"/>
            <br/>
           {# <label>Nazwisko</label>#}
            <input type="text" name="nazwisko" class="input-lg" placeholder="Nazwisko"  data-parsley-trigger="change" data-parsley-required="true" data-parsley-type="text"/>
            <br/>
            {#<label>Email</label>#}
            <input type="email" name="email" class="input-lg" placeholder="Email" data-parsley-trigger="change" data-parsley-required="true" data-parsley-type="email"/>
            <br/>
            {#<label>Hasło</label>#}
            <input id="pass" type="password"  name="haslo" class="input-lg" placeholder="Hasło" data-parsley-trigger="change" data-parsley-required="true" data-parsley-type="text"/>
            <br/>
            {#<label>Powtórz Hasło</label>#}
            <input id="passRe" type="password" class="input-lg" placeholder="Powtórz hasło" data-parsley-trigger="change" data-parsley-required="true" data-equalto="#pass" />
            <br/>
            {#<label>Telefon</label>#}
            <input  name="telefon" class="input-lg" placeholder="Telefon" data-trigger="change" data-parsley-required="true" data-type="digits" data-parsley-minlength="6" data-parsley-minlength-message="min six number" data-parsley-type="digits" data-parsley-type-message="only numbers"/><br><br>
            <div>
                <button class="btn btn-primary" type="submit"> Stwórz konto</button>              
            </div>
        </form>
        </div>
    </div>
{%endblock%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley.min.js')}}"></script>
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley-standalone.min.js')}}"></script>
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley.extend.min.js')}}"></script>

{%endblock%} 