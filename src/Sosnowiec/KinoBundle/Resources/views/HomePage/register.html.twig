{% extends "SosnowiecKinoBundle::base.html.twig"%}

{% block pageTitle %}
    Strona główna | {{parent()}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="{{asset('bundles/sosnowieckino/js/parsley/parsley.css')}}" rel="stylesheet">
    <style>
        body {                       
            padding-bottom: 40px;
            background-color: #eee;
        }
        form {
            max-width: 430px;
            padding: 25px;
            margin: 0 auto;
            background-color: white;
            border-radius: 25px;
        }      
    </style>

{%endblock%}    


{% block pageContent %}
    <div class="row" style="padding-top:80px;">

        <div class="container col-md-4 col-md-offset-4">
            <form id="form" class="form-horizontal" method="POST" action="{{path('sosnowiec_kino_register')}}" data-validate="parsley">
                <div class="form-group">
                    <h2>Rejestracja</h2>
                    <!--<label>Nazwa uzytkownika</label>-->
                    <input type="text" name="login" class="form-control"  placeholder="Nazwa użytkownika" required/>
                    <br>
                    {#<label>Imię</label>#}
                    <input type="text" name="imie" class="form-control" placeholder="Imię" required/>
                    <br>
                    {# <label>Nazwisko</label>#}
                    <input type="text" name="nazwisko" class="form-control" placeholder="Nazwisko" required/>
                    <br>
                    {#<label>Email</label>#}
                    <input type="email" name="email" class="form-control" placeholder="Email" required/>
                    <br>
                    {#<label>Hasło</label>#}
                    <input id="pass" type="password"  name="haslo" class="form-control" placeholder="Hasło" required data-parsley-trigger="change" data-parsley-required="true" data-parsley-type="text"/>
                    <br>
                    {#<label>Powtórz Hasło</label>#}
                    <input id="passRe" type="password" class="form-control" placeholder="Powtórz hasło" required data-parsley-trigger="change" data-parsley-required="true" data-equalto="#pass" />
                    <br>
                    {#<label>Telefon</label>#}
                    <input type ="text" name="telefon" class="form-control" placeholder="Telefon w formacie 123456789" required pattern="[0-9]{9}" /><br><br>
                    <div>
                        <button class="btn btn-primary" type="submit"> Stwórz konto</button>              
                    </div>
                </div>
            </form>
        </div>
    </div>
{%endblock%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley.min.js')}}"></script>
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley-standalone.min.js')}}"></script>
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley.extend.min.js')}}"></script>

{%endblock%} 