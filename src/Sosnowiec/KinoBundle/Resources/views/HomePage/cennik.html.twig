{% extends "SosnowiecKinoBundle::base.html.twig"%}

{% block pageTitle %}
    Strona główna | {{parent()}}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="{{asset('bundles/sosnowieckino/js/parsley/parsley.css')}}" rel="stylesheet">

    <style>
        .table
        {
            background-color: #D8D8D8;
            border-radius: 25px;
            padding:10px;
            margin-top:10px;
            margin-bottom:10px;
        }
        .table > tbody > tr > td,
        .table > thead > tr > th
        {
            padding :18px;    
            text-align: center;
            font-size: 1.25em; 
            text-shadow: 5px 5px 20px #182019;
        }
    </style>
{%endblock%}    


{% block pageContent %}


    <div class="container col-md-6 col-md-offset-3">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Rodzaj biletu</th>
                    <th>Pon-czw</th>
                    <th>Pt-nd</th>
                </tr>
            </thead>
            <tbody>
                {% for ticketPrice in ticketPrices %}
                    <tr>
                        <td> {{ ticketPrice.rodzaj }}</td>
                        <td>{{ ticketPrice.cena }}</td>
                        <td>{{ ticketPrice.cenaWeekend }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>



{%endblock%}

{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley.min.js')}}"></script>
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley-standalone.min.js')}}"></script>
    <script src="{{asset('bundles/sosnowieckino/js/parsley/parsley.extend.min.js')}}"></script>

{%endblock%} 